<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true">
    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/iv_ava_song"-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_marginRight="16dp"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@drawable/play_button" />-->
    <ImageView
        android:id="@+id/iv_ava_song"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_moozik" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_add_playlist"
        android:layout_toRightOf="@+id/iv_ava_song"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_name_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="NAME OF MUSIC TYPE"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_author_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_song"
            android:text="NAME OF MUSIC TYPE"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_add_playlist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:elevation="3dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_playlist_add" />
</RelativeLayout>