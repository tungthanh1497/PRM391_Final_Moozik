<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_ava_noti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_moozik" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/rl_play_pause_noti"
        android:layout_toRightOf="@id/iv_ava_noti"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="bkjsngkbkb"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_author_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_noti"
            android:lines="1"
            android:text="bkjsngkbkb"
            android:textColor="@color/colorFade"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_play_pause_noti"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_play_pause_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pause_noti" />
    </RelativeLayout>
</RelativeLayout>